pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Klont das Git-Repository
                git url: 'https://github.com/Braendli98/Film.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                // Baut das Projekt
                script {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        stage('Archive') {
            steps {
                // Verwendet zip und archiveArtifacts, um die Dateien zu zippen und zu archivieren
                zip zipFile: 'film.zip', dir: 'dist', archive: false
                archiveArtifacts artifacts: 'film.zip', allowEmptyArchive: true
            }
        }
    }
}
